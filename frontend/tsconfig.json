{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@@app/*": ["src/app/*"],
      "@@auth/*": ["src/app/auth/*"],
      "@@shared/*": ["src/app/shared/*"],
      "@@sass/*": ["src/sass/*"],
      "@@core/*": ["src/app/core/*"],
      "@@books/*": ["src/app/books/*"],
      "@@errors/*": ["src/app/errors/*"],
      "@@main/*": ["src/app/main/*"],
      "@@navigation/*": ["src/app/navigation/*"],
      "@@router/*": ["src/app/router/*"],
      "@@screen-lock/*": ["src/app/screen-lock/*"],
      "@@user/*": ["src/app/user/*"],
      "@@env/*": ["src/environments/*"]
    },
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
